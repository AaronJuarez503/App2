<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirmación de Compra</title>
</head>
<body>
    <h1>Confirmación de Compra</h1>
    <% if (items.length > 0) { %>
        <h2>Artículos comprados:</h2>
        <ul>
        <% items.forEach(function(item) { %>
            <li>
                <%= item.nombre %> - Cantidad: <%= item.cantidad %> - Precio: $<%= item.total.toFixed(2) %>
            </li>
        <% }); %>
        </ul>
        <h3>Total: $<%= items.reduce((sum, item) => sum + item.total, 0).toFixed(2) %></h3>
    <% } else { %>
        <p>No hay artículos en tu compra.</p>
    <% } %>
    <a href="/">Volver a la tienda</a>
</body>
</html>