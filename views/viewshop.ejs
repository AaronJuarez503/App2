<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Tienda</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #1a1a1a;
            color: #ffffff;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
        }
        .container {
            background-color: #000000;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 0px 30px rgb(255, 0, 0);
            text-align: center;
            max-width: 400px;
            width: 100%;
            border: 2px solid #ff0000;
        }
        #tiendaImagen {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            margin-bottom: 20px;
            object-fit: cover;
            aspect-ratio: 16 / 9;
            border: 2px solid #ff0000;
        }
        h1 {
            color: #ff0000;
            margin-top: 0;
            text-transform: uppercase;
            letter-spacing: 2px;
        }
        p {
            color: #cccccc;
            line-height: 1.6;
            margin-bottom: 20px;
        }
        strong {
            color: #ff0000;
        }
        button {
            padding: 10px 20px;
            background-color: #ff0000;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-transform: uppercase;
            font-weight: bold;
            margin-top: 10px;
        }
        button:hover {
            background-color: #cc0000;
        }
        form {
            display: none;
            margin-top: 20px;
        }
        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border-radius: 5px;
            border: 1px solid #ff0000;
            background-color: #1a1a1a;
            color: #ffffff;
            box-sizing: border-box;
        }
        .buttons {
            display: flex;
            justify-content: space-between;
        }
        .buttons button {
            width: 48%;
        }
        #cancelarBtn {
            background-color: #333333;
        }
        #cancelarBtn:hover {
            background-color: #555555;
        }
        #imagenInput {
            display: none;
        }
        #imagenLabel {
            display: inline-block;
            padding: 10px 20px;
            background-color: #333333;
            color: #ffffff;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }
        #imagenLabel:hover {
            background-color: #555555;
        }
    </style>
</head>
<body>
    <div class="container">
        <img id="tiendaImagen" src="https://images.unsplash.com/photo-1441986300917-64674bd600d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80" alt="Imagen de la tienda">
        <div id="infoTienda">

        </div>
        <form id="editForm">
            <input type="text" id="nombreInput" placeholder="Nombre de la Tienda">
            <input type="text" id="direccionInput" placeholder="Dirección">
            <input type="text" id="telefonoInput" placeholder="Número de Teléfono">
            <input type="file" id="imagenInput" accept="image/*">
            <label for="imagenInput" id="imagenLabel">Elegir Nueva Imagen</label>
            <div class="buttons">
                <button type="submit">Guardar</button>
                <button type="button" id="cancelarBtn">Cancelar</button>
            </div>
        </form>
    </div>

    <script>
        const infoTienda = document.getElementById('infoTienda');
        const editForm = document.getElementById('editForm');
        const editarBtn = document.getElementById('editarBtn');
        const cancelarBtn = document.getElementById('cancelarBtn');
        const tiendaImagen = document.getElementById('tiendaImagen');
        const imagenInput = document.getElementById('imagenInput');

        const nombreTienda = document.getElementById('nombreTienda');
        const direccionTienda = document.getElementById('direccionTienda');
        const telefonoTienda = document.getElementById('telefonoTienda');

        const nombreInput = document.getElementById('nombreInput');
        const direccionInput = document.getElementById('direccionInput');
        const telefonoInput = document.getElementById('telefonoInput');

            /*editarBtn.addEventListener('click', () => {
            infoTienda.style.display = 'none';
            editForm.style.display = 'block';
            nombreInput.value = nombreTienda.textContent;
            direccionInput.value = direccionTienda.textContent;
            telefonoInput.value = telefonoTienda.textContent;
        });*/

        cancelarBtn.addEventListener('click', () => {
            infoTienda.style.display = 'block';
            editForm.style.display = 'none';
        });

        imagenInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    tiendaImagen.src = event.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        editForm.addEventListener('submit', (e) => {
            e.preventDefault();
            nombreTienda.textContent = nombreInput.value;
            direccionTienda.textContent = direccionInput.value;
            telefonoTienda.textContent = telefonoInput.value;
            infoTienda.style.display = 'block';
            editForm.style.display = 'none';
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/javascript/viewshop.js"></script>
</body>
</html>